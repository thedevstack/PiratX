<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/media_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_description_24dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/pinned_media" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?textAppearanceCaption"
        tools:text="This is a preview of a pinned message that might be quite long."/>

    <ImageView
        android:id="@+id/unpin_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/rounded_close_24"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/unpin_message"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
